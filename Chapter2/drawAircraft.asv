function handle = drawAircraft(pn, pe, pd, phi, theta, psi, handle)

    [V,F,C] = AircraftPoints;

     V = rotate(V', phi, theta, psi)';

     V = translate(V', pn, pe, pd)';

     R = [0 1 0; 1 0 0; 0 0 -1];

     V = V*R;

     if isempty(handle)
         handle = patch('Vertices', V, 'Faces', F, 'FaceVertexCData', C, 'FaceColor','flat');
         view(3);
     else 
         set(handle, 'Verices', V, 'Faces', F);
     end


end

